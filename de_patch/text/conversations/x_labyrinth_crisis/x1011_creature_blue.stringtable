      <ID>69</ID>
      <DefaultText />
      <FemaleText />
    </Entry>
    <Entry>
      <ID>72</ID>
      <DefaultText>Follow-up PQ. 72</DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>73</ID>
      <DefaultText>Untersuche das Nevajin.</DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>74</ID>
      <DefaultText>Untersuche erneut das Nevajin.</DefaultText>
      <FemaleText />
