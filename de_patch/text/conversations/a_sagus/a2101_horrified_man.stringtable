      <ID>87</ID>
      <DefaultText>Trigger Conv Node 87</DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>88</ID>
      <DefaultText />
      <FemaleText />
    </Entry>
    <Entry>
      <ID>89</ID>
      <DefaultText>„L-Lebt wohl.“</DefaultText>
      <FemaleText />
