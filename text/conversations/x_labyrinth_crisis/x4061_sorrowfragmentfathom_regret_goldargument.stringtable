    <Entry>
      <ID>39</ID>
      <DefaultText>Lass die Erinnerungen kommen.</DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>40</ID>
      <DefaultText>Widerstehe ihnen.</DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>41</ID>
      <DefaultText>Du konzentrierst dich und die Erinnerungen ziehen sich zurück.</DefaultText>
      <FemaleText />
