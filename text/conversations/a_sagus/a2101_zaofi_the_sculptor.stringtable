      <ID>123</ID>
      <DefaultText />
      <FemaleText />
    </Entry>
    <Entry>
      <ID>124</ID>
      <DefaultText />
      <FemaleText />
    </Entry>
    <Entry>
      <ID>125</ID>
      <DefaultText>::niest::</DefaultText>
      <FemaleText />
    </Entry>
